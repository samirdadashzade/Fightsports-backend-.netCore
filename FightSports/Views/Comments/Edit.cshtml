@model FightSports.Models.Comments

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin_panel.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Comments</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CommentId" />
                <div class="form-group">
                    <label asp-for="AuthorName" class="control-label"></label>
                    <input asp-for="AuthorName" class="form-control" />
                    <span asp-validation-for="AuthorName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommentTxt" class="control-label"></label>
                    <input asp-for="CommentTxt" class="form-control" />
                    <span asp-validation-for="CommentTxt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AbstractCommentType" class="control-label"></label>
                    <input asp-for="AbstractCommentType" class="form-control" />
                    <span asp-validation-for="AbstractCommentType" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommentDate" class="control-label"></label>
                    <input asp-for="CommentDate" class="form-control" />
                    <span asp-validation-for="CommentDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsId" class="control-label"></label>
                    <select asp-for="NewsId" class="form-control" asp-items="ViewBag.NewsId"></select>
                    <span asp-validation-for="NewsId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>

</body>
</html>
