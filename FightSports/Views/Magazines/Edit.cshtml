@model FightSports.Models.Magazine

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin_panel.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Magazine</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MagazineId" />
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MagazineAdress" class="control-label"></label>
                    <input asp-for="MagazineAdress" class="form-control" />
                    <span asp-validation-for="MagazineAdress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MagazineLongitude" class="control-label"></label>
                    <input asp-for="MagazineLongitude" class="form-control" />
                    <span asp-validation-for="MagazineLongitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MagazineLatitude" class="control-label"></label>
                    <input asp-for="MagazineLatitude" class="form-control" />
                    <span asp-validation-for="MagazineLatitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductTxt" class="control-label"></label>
                    <input asp-for="ProductTxt" class="form-control" />
                    <span asp-validation-for="ProductTxt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductPrice" class="control-label"></label>
                    <input asp-for="ProductPrice" class="form-control" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductTitle" class="control-label"></label>
                    <input asp-for="ProductTitle" class="form-control" />
                    <span asp-validation-for="ProductTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SportCategoryId" class="control-label"></label>
                    <select asp-for="SportCategoryId" class="form-control" asp-items="ViewBag.SportCategoryId"></select>
                    <span asp-validation-for="SportCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MagazineFirstPhotoPath" class="control-label"></label>
                    <input asp-for="MagazineFirstPhotoPath" class="form-control" />
                    <span asp-validation-for="MagazineFirstPhotoPath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
