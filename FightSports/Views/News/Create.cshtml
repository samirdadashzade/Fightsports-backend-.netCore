@model FightSports.Models.News

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin_panel.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>News</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NewsName" class="control-label"></label>
                    <input asp-for="NewsName" class="form-control" />
                    <span asp-validation-for="NewsName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsTitle" class="control-label"></label>
                    <input asp-for="NewsTitle" required class="form-control" />
                    <span asp-validation-for="NewsTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsBigTitle" class="control-label"></label>
                    <input asp-for="NewsBigTitle" class="form-control" />
                    <span asp-validation-for="NewsBigTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsTxt" class="control-label"></label>
                    <input asp-for="NewsTxt" required class="form-control" />
                    <span asp-validation-for="NewsTxt" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="NewsViews" class="control-label"></label>
                    <input asp-for="NewsViews" class="form-control" value="0" />
                    <span asp-validation-for="NewsViews" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:none">
                    <label asp-for="NewsAddedDate" class="control-label"></label>
                    <input asp-for="NewsAddedDate" class="form-control" />
                    <span asp-validation-for="NewsAddedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OptionalLongitude" class="control-label"></label>
                    <input asp-for="OptionalLongitude" class="form-control" />
                    <span asp-validation-for="OptionalLongitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OptionalLatitude" class="control-label"></label>
                    <input asp-for="OptionalLatitude" class="form-control" />
                    <span asp-validation-for="OptionalLatitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsTypeId" class="control-label">News Type Name</label>
                    <select asp-for="NewsTypeId" class="form-control" asp-items="ViewBag.NewsTypeId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SportCategoryId" class="control-label">Sport Category Name</label>
                    <select asp-for="SportCategoryId" class="form-control" asp-items="ViewBag.SportCategoryId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="OptionalAdress" class="control-label"></label>
                    <input asp-for="OptionalAdress" class="form-control" />
                    <span asp-validation-for="OptionalAdress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewsFirstVideoPath" class="control-label"></label>
                    <input asp-for="NewsFirstVideoPath" class="form-control" />
                    <span asp-validation-for="NewsFirstVideoPath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="FormFile" class="form-control forFileSize" type="file" />
                    <span asp-validation-for="FormFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FormFile" class="control-label">News First Image</label>
                    <label class="btn btn-primary" for="FormFile">Choose File</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success submitThis" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous">
    </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js">
    </script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js">
    </script>

    <script type="text/javascript">
        $(function () {
            $('.forFileSize').bind('change', function () {
                // check if the file is larger than 2MB
                if (this.files[0].size > 2 * 1024 * 1024) {
                    alert("file is larger than 2 Mb, please choose a smaller one.")
                    $('.submitThis').attr('disabled', 'disabled')
                }
                else {
                    $('.submitThis').removeAttr('disabled', 'disabled')
                }
            });
        })
    </script>
</body>
</html>
