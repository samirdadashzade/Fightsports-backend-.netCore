@model FightSports.Models.SportCategories

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin_panel.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>SportCategories</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
