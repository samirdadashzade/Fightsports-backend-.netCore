@model WebApplication1.Models.Banners

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin_panel.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Banners</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BannerId" />
                <div class="form-group">
                    <label asp-for="CustumerName" class="control-label"></label>
                    <input asp-for="CustumerName" required class="form-control" />
                    <span asp-validation-for="CustumerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="FormFile" class="form-control" type="file" />
                    <span asp-validation-for="FormFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FormFile" class="control-label">Banner Photo</label>
                    <label class="btn btn-primary" for="FormFile">Choose File</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>

</body>
</html>
