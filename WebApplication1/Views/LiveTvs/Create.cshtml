@model WebApplication1.Models.LiveTv

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin_panel.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>LiveTv</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LivePath" class="control-label"></label>
                    <input asp-for="LivePath" required class="form-control" />
                    <span asp-validation-for="LivePath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LiveTitle" class="control-label"></label>
                    <input asp-for="LiveTitle" required class="form-control" />
                    <span asp-validation-for="LiveTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="FormFile" class="form-control forFileSize" type="file" />
                    <span asp-validation-for="FormFile" required class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FormFile" class="control-label">Photo</label>
                    <label class="btn btn-primary" for="FormFile">Choose File</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success submitThis" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.js" integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous">
    </script>

    <script type="text/javascript">
        $(function () {
            $('.forFileSize').bind('change', function () {
                // check if the file is larger than 2MB
                if (this.files[0].size > 2 * 1024 * 1024) {
                    alert("file is larger than 2 Mb, please choose a smaller one.")
                    $('.submitThis').attr('disabled', 'disabled')
                }
                else {
                    $('.submitThis').removeAttr('disabled', 'disabled')
                }
            });
        })
    </script>
</body>
</html>
